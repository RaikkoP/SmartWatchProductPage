---

interface Props {
    icon: string,
    size: string,
    alt: string
}

const { icon, size, alt } = Astro.props;

---

<img src={icon} alt={alt} class=`icon ${size}` />

---
<style type="scss">
    .icon {
        &__sm {
            height: 16px; 
            width: 16px;
        }

        &__md {
            height: 24px; 
            width: 24px;
        }

        &__lg {
            height: 36px; 
            width: 36px;
        }
    }
</style>